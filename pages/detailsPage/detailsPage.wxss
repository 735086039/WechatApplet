/**index.wxss**/
page{
  font-family: "Microsoft YaHei";
  background-color:#EFEFF4;
  font-size: 24rpx;
}
.swiper-lb{
  width: 100%;
  height: 740rpx;
}
.swiper-lb .slide-image{
  width: 100%;
  height: 100%;
}
.commodity{
  background: #fff;
  padding: 20rpx;
}
.commodity text{
  display: block;
}
.commodity text:nth-child(1){
  font-size: 32rpx;
}
.commodity text:nth-child(2){
  margin: 10rpx 0 10rpx 0;
}
.commodity text:nth-child(3){
  color: #28cacc;
  font-size: 28rpx;
}
.center{
  background: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}
.deleNuber{

}
.deleNuber:after{
  font-family: 'iconfont';
  content: "\e715";
  font-size: 36rpx;
}
.addNumber:after{
  font-family: 'iconfont';
  content: "\e615";
  font-size: 36rpx;
}



.view-bottom{
  display: flex;
  background: #fff;
  /* padding: 20rpx; */
  margin-top: 20rpx;
}

.details,.evaluate{
  width: 50%;
  height: 30px;
  line-height: 30px;
  border-bottom: 1px solid #e9e9e9;
  text-align: center;
}
.view-show{
  padding: 20rpx;
  background: #fff;
  min-height: 40px;
}

.action{
  color: #28cacc;
  border-bottom: 1px solid #28cacc;
}