page{
    font-family: "Microsoft YaHei";
    background-color:#EFEFF4;
    font-size: 24rpx;
}
.navigator-hover{
    background: none;
}
.cart-box{
    padding-bottom: 100rpx;
}
.cart-list{
    position: relative;
    padding: 20rpx 20rpx 20rpx 285rpx;
    height: 185rpx;
    border-bottom: 1rpx solid #e9e9e9;
    background: #fff;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 45rpx;
    height: 45rpx;
}

.cart-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 85rpx;
    width: 185rpx;
    height: 185rpx;
}
.cart-list .cart-pro-name{
    display:block;
    width: 420rpx;
    height: 60rpx;
    line-height: 50rpx;
    overflow: hidden;
    font-size: 28rpx;
    white-space:nowrap;  
    text-overflow:ellipsis;

}
.cart-list .cart-pro-price{
    display: inline-block;
    /* float: right; */
    height: 105rpx;
    line-height: 50rpx;
    font-size: 32rpx;
    color: #28cacc;
}
.cart-list .cart-count-box{
    position: absolute;
    left: 285;
    bottom: 20rpx;
    width: 250rpx;
    height: 60rpx;
}
.cart-list .cart-count-box text{
    display: inline-block;
    line-height: 60rpx;
    text-align: center;
}
.cart-count-down,.cart-count-add{
    font-size: 44rpx;
    width: 50rpx;
    height: 100%;
}
.cart-count-down:after{
  font-family: 'iconfont';
  content: "\e715";
  font-size: 40rpx;
  color: #666;
}
.cart-count-add:after{
  font-family: 'iconfont';
  content: "\e615";
  font-size: 40rpx;
  color: #666;
}
.cart-count-num{
    width: 110rpx;
    /* border: 1px solid #ccc; */
}
.cart-del{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 38rpx;
}
.cart-del:after{
  font-family: 'iconfont';
  content: "\e601";
  color: red;
}

.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 100rpx 0 80rpx;
    box-sizing: border-box;
    background: #28cacc;
    color: #fff;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
    position: absolute;
    right: 40rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;  
    background-size: 100%;
}
.cart-toatl-price{
    float: right;
    width: 120rpx;
    font-size: 38rpx;
}

.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}