/**index.wxss**/
Page{
  font-size: 24rpx;
  font-family: "Microsoft YaHei"
}
.search{

}
.search view{
  font-size: 24rpx;
  border: 1px solid #e9e9e9;
  border-radius: 10px;
  width: 80%;
  color: #ccc;
  margin: 10rpx auto;
  padding:10rpx;
  text-align: center;
  
}

.search view::before{
   font-family: 'iconfont' !important;
  content:"\e603";  
  margin-right: 10rpx;
  font-size: 26rpx;
  text-align: center
}
.screen{
  display: flex;
  width: 100%;
  border-top: 1px solid #e9e9e9;
  border-bottom: 1px solid #e9e9e9;
  height: 30px;
  line-height: 30px;
  font-size: 28rpx;
}
.screen view{
  width: 34%;
  text-align: center;
  color: #333;
}

.listOfGoods{
  display: flex;
}
.listOfImg{
  width: 30%;
  height: 180rpx;
}
.listOfImg image{
  width: 100%;
  height: 100%;
  padding-top:10rpx;
}

.listOfRight{
  height: 180rpx;
  border-bottom: 1px solid #e9e9e9;
  width: 70%;
  padding-top:10rpx;
}
.rightTitle{
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;

}
.rightPrice{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #28cacc;
}
.rightPraise{
  width: 100%;
  color: #999;
}